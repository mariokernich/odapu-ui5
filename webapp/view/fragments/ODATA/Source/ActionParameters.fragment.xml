<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <VBox
        class="sapUiSmallMarginBegin sapUiSmallMarginEnd sapUiSmallMarginTop sapUiSmallMarginBottom"
        visible="{= ${local>/resourceType} === 'action' }"
    >
        <Title
            titleStyle="H5"
            text="Parameters ({= ${selectedAction>/parameters}.length })"
        />
        <MessageStrip
            text="There are no parameters for this action. Just click on Execute Action."
            visible="{= ${selectedAction>/parameters}.length === 0 }"
        />
        <VBox backgroundDesign="Solid" visible="{= ${selectedAction>/parameters}.length > 0 }">
            <VBox
                class="sapUiSmallMarginTop sapUiTinyMarginBottom"
                items="{selectedAction>/parameters}"
            >
                <VBox
                    class="sapUiTinyMarginBottom sapUiSmallMarginBegin sapUiSmallMarginEnd"
                >
                    <Text
                        text="{= ${selectedAction>maxLength} === 0 ? ${selectedAction>name} : ${selectedAction>name} + ' (length: ' + ${selectedAction>maxLength} + ')'}"
                    />
                    <VBox>
                        <Input
                            placeholder="Enter {selectedAction>name}..."
                            maxLength="{selectedAction>maxLength}"
                            name="{selectedAction>name}"
                            visible="{= ${selectedAction>type} !== 'Edm.Boolean' 
                                &amp;&amp; ${selectedAction>type} !== 'Edm.Date'
                                &amp;&amp; ${selectedAction>type} !== 'Edm.DateTime' 
                                &amp;&amp; ${selectedAction>type} !== 'Edm.TimeOfDay' 
                                &amp;&amp; ${selectedAction>type} !== 'Edm.DateTimeOffset' 
                                &amp;&amp; ${selectedAction>type} !== 'Edm.Time'
                                &amp;&amp; ${selectedAction>type} !== 'Edm.Byte'
                                &amp;&amp; ${selectedAction>type} !== 'Edm.SByte'
                                &amp;&amp; ${selectedAction>type} !== 'Edm.Int16'
                                &amp;&amp; ${selectedAction>type} !== 'Edm.Int32' }"
                        />
                        <Switch
                            visible="{= ${selectedAction>type} === 'Edm.Boolean' }"
                            name="{selectedAction>name}"
                        />
                        <DatePicker
                            visible="{= ${selectedAction>type} === 'Edm.Date' }"
                            name="{selectedAction>name}"
                        />
                        <DateTimePicker
                            visible="{= ${selectedAction>type} === 'Edm.DateTime' 
                                || ${selectedAction>type} === 'Edm.DateTimeOffset' }"
                            name="{selectedAction>name}"
                        />
                        <TimePicker
                            visible="{= ${selectedAction>type} === 'Edm.TimeOfDay' 
                                || ${selectedAction>type} === 'Edm.Time' }"
                            name="{selectedAction>name}"
                        />
                        <StepInput
                            visible="{= ${selectedAction>type} === 'Edm.Byte' 
                                || ${selectedAction>type} === 'Edm.SByte'
                                || ${selectedAction>type} === 'Edm.Int16'
                                || ${selectedAction>type} === 'Edm.Int32' }"
                            name="{selectedAction>name}"
                            min="{= ${selectedAction>type} === 'Edm.Byte' ? '0' : 
                                ${selectedAction>type} === 'Edm.SByte' ? '-128' :
                                ${selectedAction>type} === 'Edm.Int16' ? '-32768' :
                                ${selectedAction>type} === 'Edm.Int32' ? '-2147483648' : undefined }"
                            max="{= ${selectedAction>type} === 'Edm.Byte' ? '255' :
                                ${selectedAction>type} === 'Edm.SByte' ? '127' :
                                ${selectedAction>type} === 'Edm.Int16' ? '32767' :
                                ${selectedAction>type} === 'Edm.Int32' ? '2147483647' : undefined }"
                        />
                    </VBox>
                </VBox>
            </VBox>
        </VBox>
    </VBox>
</c:FragmentDefinition>
