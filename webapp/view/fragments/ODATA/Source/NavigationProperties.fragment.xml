<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Title
        titleStyle="H5"
        text="Navigation Properties ({= ${local>/selectedEntityProperties/navigationProperties}.length })"
        visible="{= ${local>/resourceType} === 'entity' &amp;&amp; ${local>/selectedEntityName} !== '' &amp;&amp; ( ${local>/selectedMethod} === 'GET' || ${local>/selectedMethod} === 'GETBY' ) &amp;&amp; ${local>/selectedEntityProperties/navigationProperties}.length > 0 }"
    />
    <VBox
        renderType="Bare"
        backgroundDesign="Solid"
         visible="{= ${local>/resourceType} === 'entity' &amp;&amp; ${local>/selectedEntityName} !== '' &amp;&amp; ( ${local>/selectedMethod} === 'GET' || ${local>/selectedMethod} === 'GETBY' ) &amp;&amp; ${local>/selectedEntityProperties/navigationProperties}.length > 0 }"
    >
        <VBox
            class="sapUiTinyMarginTop sapUiTinyMarginBottom"
            items="{local>/selectedEntityProperties/navigationProperties}"
            id="idNavigationPropertiesVBox"
        >
            <VBox class="sapUiTinyMarginBegin sapUiTinyMarginEnd">
                <HBox alignItems="Center">
                    <CheckBox
                        text="{local>name}"
                        selected="{= ${local>/selectedNavigationProperties}.indexOf(${local>name}) > -1 }"
                        select="onNavigationPropertyChange"
                    />
                </HBox>
            </VBox>
        </VBox>
    </VBox>
</c:FragmentDefinition> 