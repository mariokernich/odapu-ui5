<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Toolbar>
        <Button
            text="{= ${local>/resourceType} === 'entity' ? 'Send Request' : 'Execute Function'}"
            type="Emphasized"
            press=".onSendRequest"
            width="100%"
            enabled="{= ${global>/AppBusy} === false &amp;&amp; ${local>/selectedEntityName} !== '' }"
        />
    </Toolbar>
</c:FragmentDefinition>
