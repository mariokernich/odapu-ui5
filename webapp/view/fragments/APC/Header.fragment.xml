<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <OverflowToolbar>
        <Button
            text="{i18n>lbl.choosePushChannel}"
            type="Ghost"
            enabled="{= ${apcModel>/state} === 'disconnected'}"
            press="onChoosePushChannelButtonPress"
        />
        <Label
            text="{i18n>lbl.status}: {apcModel>/state}"
            visible="{= ${apcModel>/selectedApc/path} !== ''}"
        />
        <ToolbarSpacer />
        <Button
            icon="sap-icon://connected"
            visible="{= ${apcModel>/state} === 'disconnected'}"
            press="onConnectPushChannelButtonPress"
            text="{i18n>lbl.connect}"
            type="Ghost"
            enabled="{= ${apcModel>/selectedApc/path} !== ''}"
        />
        <Button
            icon="sap-icon://disconnected"
            visible="{= ${apcModel>/state} === 'connected'}"
            press="onDisconnectPushChannelButtonPress"
            text="{i18n>lbl.disconnect}"
            type="Ghost"
            enabled="{= ${apcModel>/selectedApc/path} !== ''}"
        />
        <Button
            icon="sap-icon://clear-all"
            enabled="{= ${apcModel>/selectedApc/path} !== ''}"
            press="onClearPushChannelButtonPress"
            text="{i18n>lbl.clear}"
            type="Ghost"
        />
    </OverflowToolbar>
</c:FragmentDefinition>
