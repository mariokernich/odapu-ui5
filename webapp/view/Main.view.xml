<mvc:View
    controllerName="de.kernich.odpu.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    core:require="{
        formatter: 'de/kernich/odpu/model/formatter'
    }"
>
    <Page
        busy="{global>/AppBusy}"
        busyIndicatorDelay="0"
        showHeader="false"
    >
        <content>
            <TabContainer
                id="idTabContainer"
                showAddNewButton="true"
                addNewButtonPress="onTabContainerAddNewButtonPress"
                itemClose="onTabContainerItemClose"
            />
        </content>
    </Page>
</mvc:View>
