<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        title="{i18n>dlg.title.updateAvailable}"
        contentWidth="400px"
        draggable="true">
        <content>
            <VBox class="sapUiSmallMargin" alignItems="Center">
                <VBox alignItems="Center" class="sapUiSmallMarginBottom">
                    <Text
                        text="{i18n>msg.newVersionAvailable}"
                        wrapping="true"
                        class="sapThemeFontSizeLarge" />
                    <Text
                        text="{i18n>msg.currentVersion}: {dialog>/currentVersion}"
                        wrapping="true"
                        class="sapUiTinyMarginTop" />
                    <Text
                        text="{i18n>msg.latestVersion}: {dialog>/latestVersion}"
                        wrapping="true"
                        class="sapUiTinyMarginTop" />
                </VBox>
                <FormattedText
                    htmlText="{dialog>/releaseNotes}"
                    class="sapUiTinyMarginBegin sapUiTinyMarginEnd" />
            </VBox>
        </content>
        <buttons>
            <Button
                text="{i18n>btn.getUpdate}"
                type="Emphasized"
                icon="sap-icon://chain-link"
                press="onGetUpdate" />
            <Button
                text="{i18n>btn.close}"
                type="Ghost"
                icon="sap-icon://decline"
                press="onClose" />
        </buttons>
    </Dialog>
</core:FragmentDefinition> 