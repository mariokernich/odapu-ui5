<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        title="{i18n>dlg.title.confirm}"
        contentWidth="400px"
        draggable="true">
        <content>
            <Text
                text="{dialog>/message}"
                class="sapUiSmallMargin" />
        </content>
        <buttons>
            <Button
                text="{i18n>btn.yes}"
                type="Emphasized"
                icon="sap-icon://accept"
                press="onConfirm" />
            <Button
                text="{i18n>btn.no}"
                type="Ghost"
                icon="sap-icon://decline"
                press="onCancel" />
        </buttons>
    </Dialog>
</core:FragmentDefinition> 