<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title="{i18n>dlg.title.selectPushChannel}"
        contentWidth="80%"
        contentHeight="80%"
    >
        <content>
            <Toolbar>
                <SearchField
                    width="100%"
                    placeholder="{i18n>ph.searchPushChannels}..."
                    liveChange="onSearch"
                />
                <ToolbarSpacer />
            </Toolbar>
            <Table
                id="idApcTable"
                mode="SingleSelectMaster"
                growingThreshold="100"
                growing="true"
                growingScrollToLoad="true"
                items="{dialog>/apc}"
            >
                <columns>
                    <Column>
                        <header>
                            <Label text="{i18n>lbl.applicationId}" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="{i18n>lbl.path}" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="{i18n>lbl.description}" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="{i18n>lbl.protocolTypeId}" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="{i18n>lbl.amcMessageTypeId}" />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{dialog>ApplicationId}" />
                            <Text text="{dialog>Path}" />
                            <Text text="{dialog>Description}" />
                            <Text text="{dialog>ProtocolTypeId}" />
                            <Text text="{dialog>AmcMessageTypeId}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <buttons>
            <Button
                text="{i18n>btn.choose}"
                type="Emphasized"
                icon="sap-icon://accept"
                press="onChoose"
            />
            <Button
                text="{i18n>btn.cancel}"
                type="Ghost"
                icon="sap-icon://decline"
                press="onCancel"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
